<h2>アカウントの編集</h2>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname%>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :age%>
          </div>
          <div class='field-input'>
            <%= f.text_field :age%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :occupation%>
          </div>
          <div class='field-input'>
            <%= f.text_field :occupation%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :self_introduction%>
          </div>
          <div class='field-input'>
            <%= f.text_area :self_introduction, rows: "5" %>拡大できるよ
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      <% end %>
    </div>